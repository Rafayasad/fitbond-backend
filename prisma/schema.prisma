// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  role        Roles     @relation(fields: [roleId], references: [id])
  email       String    @unique
  password    String?
  type        String?   @default("email")
  fullname    String?
  phoneNumber String?
  profilePic  String?
  roleId      Int
  dob         DateTime?
  gender      String?
  aboutMe     String?
  otp         Otp?
  archive     Boolean   @default(false)
  customerId  String?   @unique
  paymentType String? 
}

model Otp {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int       @unique
  otp       Int?      @unique
  otpExpiry DateTime?
  used      Boolean   @default(false)
}

model Roles {
  id   Int    @id @default(autoincrement())
  role String @unique
  user User[]
}

model Categories {
  id       Int        @id @default(autoincrement())
  category String     @unique
  archive  Boolean    @default(false)
  channels Channels[]
}

model Subscription {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  desc     String?
  amount   Int
  services String[]
  type     String   @unique
  archive  Boolean  @default(false)
  stripePlanId String  @unique
  braintreePlanId String?  @unique
}

model Channels {
  id         Int        @id @default(autoincrement())
  channel    String     @unique
  link       String     @unique
  archive    Boolean    @default(false)
  category   Categories @relation(fields: [categoryId], references: [id])
  categoryId Int
}


model Orders {
  id              Int        @id @default(autoincrement())
  orderName       String    
  customerName    String  
  customerEmail   String  
  paymentType     String  
  planId          String  
  customerId      String  
  userId      String  
  subscriptionId  String     @unique
  archive         Boolean    @default(false)
}

